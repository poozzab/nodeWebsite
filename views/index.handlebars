<h1 class="text-center mb-3">
    <a href='/'>{{title}}</a>
</h1>
<form id="create-members-form" action="/api/members" method="POST" class="mb-4" data-bind="submit: submit">
    <div class="row">
        <div class="form-group col-6">
            <label for="name">First Name*</label>
            <input type="text" name="first_name" class="form-control" data-bind="value: first_name" required>
        </div>
        <div class="form-group col-6">
            <label for="name">Last Name*</label>
            <input type="text" name="last_name" class="form-control" data-bind="value: last_name" required>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="email">Gender</label>
            <select name="gender" class="form-control" data-bind="value: gender">
                <option></option>
                <option>male</option>
                <option>female</option>
                <option>other</option>
            </select>
        </div>
        <div class="form-group col-6">
            <label for="email">Email*</label>
            <input type="text" name="email" class="form-control" data-bind="value: email" required>
        </div>
    </div>
    <input type="hidden" name="form_submit" value="true"> 
    <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>
<h4>Members</h4>
<ul class="list-group">
    {{#each members}}
        <li class="list-group-item" >
            <div class="row">
                <div class="col-8">{{this.first_name}} {{this.last_name}}: {{this.email}}</div>
                <div class="col-2">
                    <form action="/update/{{this._id}}" method="GET" style="display: inline-flex">
                        <input type="submit" value="Update" class="btn btn-primary">
                    </form>
                </div>
                <div class="col-2">
                    <form class="delete-member-button" action="/api/members/{{this._id}}" data-id="{{this._id}}" method="DELETE" style="display: inline-flex" data-bind="submit: submit">
                        <input type="submit" value="Delete" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </li>
    {{/each}}
</ul>
<script type='text/javascript' src='members_form.js'></script>